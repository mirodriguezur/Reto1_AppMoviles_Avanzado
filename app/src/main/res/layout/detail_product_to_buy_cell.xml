<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:elevation="10dp"
    android:radius="100dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageDetailProductToBuy"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:src="@drawable/bebida_aromatica"
            android:layout_gravity="center"
            android:padding="5dp"
            android:background="@drawable/border"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/nameProductToBuyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageDetailProductToBuy" />

        <LinearLayout
            android:id="@+id/amountProductToBuyLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingLeft="15dp"
            app:layout_constraintTop_toBottomOf="@+id/nameProductToBuyTextView">

            <TextView
                android:id="@+id/labelAmountProductToBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantidad:"
                android:textColor="?attr/colorOnBackground"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/amountProductToBuyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:text="10"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/priceProductToBuyLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingLeft="15dp"
            app:layout_constraintTop_toBottomOf="@+id/amountProductToBuyLinearLayout">

            <TextView
                android:id="@+id/textLabelCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio unitario:"
                android:textColor="?attr/colorOnBackground"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/unitPriceProductToBuyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="$ 35.000"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/totalPriceProductToBuyLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingLeft="15dp"
            app:layout_constraintTop_toBottomOf="@+id/priceProductToBuyLinearLayout">

            <TextView
                android:id="@+id/totalPriceLabelCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio total:"
                android:textColor="?attr/colorOnBackground"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totalPriceProductToBuyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="$ 35.000"
                android:textStyle="italic" />
        </LinearLayout>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/deleteProductToBuyFloatingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="-100dp"
            android:src="@drawable/baseline_delete_outline_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>